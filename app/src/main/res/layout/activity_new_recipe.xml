<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@mipmap/newrecipebackground"
    tools:context=".NewRecipeActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/newRecipe_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:minHeight="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textColor="@color/white"
            android:textStyle="bold"

            android:text="Name:" />

        <EditText
            android:id="@+id/editText_recipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textStyle="bold"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/edittext"
            android:maxLines="1"
            android:layout_weight="0.50"
            android:layout_marginLeft="40px"
             />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Category:" />

        <Spinner
            android:id="@+id/spinner_recipeCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textStyle="bold"

            android:background="@drawable/edittext"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="150px"
             />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Time:" />

        <EditText
            android:id="@+id/editText_recipeTime"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textStyle="bold"
            android:background="@drawable/edittext"
            android:padding="5dp"
            android:gravity="center"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:inputType="number"
            android:layout_weight="0.50"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginRight="130dp"
            android:text="Min" />


    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-37dp"
        android:layout_gravity="center"
        android:padding="20dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Ingredients:" />

        <EditText
            android:id="@+id/editText_recipeIngredients"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:typeface="serif"
            android:textStyle="bold"
            android:background="@drawable/edittext"
            android:padding="10dp"
            android:gravity="center"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Steps:"/>

        <EditText
            android:id="@+id/editText_recipeSteps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:typeface="serif"
            android:textStyle="bold"
            android:background="@drawable/edittext"
            android:padding="10dp"
            android:gravity="center"
            android:layout_weight="0.50"
            android:layout_marginLeft="40dp"/>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/button_recipePicture"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext"
            android:backgroundTint="@color/yellow"
            android:text="Take a picture"/>


        <ImageView
            android:id="@+id/imageView_cameraPicture"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="140dp"
            android:layout_marginBottom="10dp"

            android:padding="3dp"
            android:background="@drawable/pictureframe"
            android:src="@mipmap/nopicture"
            android:orientation="horizontal" />


    </RelativeLayout>



</LinearLayout>